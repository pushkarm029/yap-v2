# NextAuth.js Configuration
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_TWITTER_ID="your-twitter-client-id"
AUTH_TWITTER_SECRET="your-twitter-client-secret"
NEXTAUTH_URL="http://localhost:3000"

# Logging Configuration
LOG_LEVEL="debug"

# Turso Database Configuration
# Get from: https://turso.tech
TURSO_DATABASE_URL="libsql://your-database.turso.io"
TURSO_AUTH_TOKEN="your-turso-auth-token"

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="your-email@example.com"

# Cloudflare R2 Configuration
# Get from: Cloudflare Dashboard -> R2
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://your-bucket.r2.dev"

# Vercel Cron Job Authentication
# Generate with: openssl rand -base64 32
# This should be set in Vercel Environment Variables
CRON_SECRET="your-cron-secret-here"

# Solana Configuration
# Client-side RPC (optional - uses public endpoint if not set)
NEXT_PUBLIC_SOLANA_RPC="https://api.devnet.solana.com"
NEXT_PUBLIC_SOLANA_NETWORK="devnet"
NEXT_PUBLIC_YAP_PROGRAM_ID="CP5uP8kmwMnRDLh2yfrbeZLByo2wNCUdmQqTz3bso5dy"

# Solana Distribution (Server-side)
# Keypair JSON array for the wallet authorized to update merkle root onchain
# Get from: cat ~/.config/solana/id.json
MERKLE_UPDATER_SECRET_KEY='[1,2,3,...]'
# Optional: Custom RPC for server-side operations
SOLANA_RPC_URL="https://api.devnet.solana.com"

# Development Configuration
# Port for dev server (default: 3000)
# Use different ports for concurrent worktrees (see scripts/new-feature.sh)
PORT=3000
